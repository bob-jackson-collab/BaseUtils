<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#11000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />

            <com.ys.baseproject.view.RotateTextView
                android:id="@+id/fragment_tag16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#22666666"
                android:textSize="22sp"
                app:degree="350dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>